#: import utils kivy.utils
<HomeScreen>:
    FloatLayout:
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#fcfcfa")
            Rectangle:
                size: self.size
                pos: self.pos
        Label:
            # 10% - Hello, Welcome
            pos_hint: {"top": 1, "left": 1}
            size_hint: 1, .1
            text: 'Hello, Welcome'
            font_size: 36
            color: utils.get_color_from_hex("#1E1E1E")
        Label:
            # 10% - Date
            pos_hint: {"top": .9, "left": 1}
            size_hint: 1, .1
            text: 'Today is Wednesday, Febuary 1st'
            color: utils.get_color_from_hex("#1E1E1E")
            id: date
        BoxLayout:
            pos_hint: {"top": .8, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/weather.png"
                allow_stretch: True
                size: self.texture_size

        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"top": .6, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/flag.png"
                allow_stretch: True
                size: self.texture_size
        Label:
            # 10% - Message
            pos_hint: {"top": .4, "left": 1}
            size_hint: 1, .1
            text: 'All homeowners have been notified'
            color: utils.get_color_from_hex("#1E1E1E")
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"top": .3, "left": 1}
            size_hint: 1, .2
            Image:
                source: "icons/Schedule.png"
                allow_stretch: True
                size: self.texture_size
        BoxLayout:
            orientation: 'vertical'
            pos_hint: {"top": .1, "left": 1}
            size_hint: 1, .1
            Button:
                text: 'start'
                on_press:
                    app.change_screen('checkbox_screen')
                on_release:
                    color: utils.get_color_from_hex("#3d54c8")
