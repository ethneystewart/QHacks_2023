<CheckBoxScreen>:
    BoxLayout:
        orientation: "vertical"
        size: root.width, root.height
        canvas:
            Color:
                rgb: utils.get_color_from_hex("#fcfcfa")
            Rectangle:
                size: self.size
                pos: self.pos

        Label:
            text: "Select Problem(s)"
            color: utils.get_color_from_hex("#1E1E1E")
            font_size: 32

        GridLayout:
            cols:2

            Label:
                text: "Waste not placed on curbside"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Waste not placed on curbside")

            Label:
                text: "Recycling not placed on curbside"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Recycling not placed on curbside")

            Label:
                text: "Garbage overweight"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Waste overweight")

            Label:
                text: "Loose garbage in containers"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Loose garbage in containers")

            Label:
                text: "Non-recyclables in recycling bin"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Non-recyclables in recycling bin")

            Label:
                text: "Incorrect recycling box size"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Incorrect recycling box size")

            Label:
                text: "Non food waste in green bin"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Non food waste in green bin")

            Label:
                text: "Loose garbage in containers"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "Loose garbage in containers")

            Label:
                text: "No liner in green bin"
                color: utils.get_color_from_hex("#1E1E1E")
                font_size:20
            CheckBox:
                on_active: root.checkbox_click(self, self.active, "No liner in green bin")

        Label:
            id: output_label
            text: "Select Problem(s)"
            color: utils.get_color_from_hex("#1E1E1E")
            font_size: 32

        Button:
            text: 'Submit'
            color: utils.get_color_from_hex("#1E1E1E")
            font_size: 24
            on_press:
                color: utils.get_color_from_hex("#3d54c8")


